</style>
<script type="text/javascript">
$(document).keyup(function(e){
    if (e.keyCode == 37) { 
	window.location.href = "/battled/<%- offense %>/<%- defense %>";
        return false;
    }
    if (e.keyCode == 39) { 
	window.location.href = "/battled/<%- defense %>/<%- offense %>";
        return false;
    }
});
</script>
